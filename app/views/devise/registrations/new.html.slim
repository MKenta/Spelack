.contents.row
  h2
    | Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :first_name
      em
        | (30 characters maximum)
      br
      = f.text_field :first_name, autofocus: true, maxlength: "30"
    .field
      = f.label :middle_name
      em
        | (30 characters maximum)
      br
      = f.text_field :middle_name, autofocus: true, maxlength: "30"
    .field
      = f.label :last_name
      em
        | (30 characters maximum)
      br
      = f.text_field :last_name, autofocus: true, maxlength: "30"
    .field
      = f.label :nickname
      em
        | (20 characters maximum)
      br
      = f.text_field :nickname, autofocus: true, maxlength: "20"
    .field
      = f.label :email
      br
      = f.email_field :email
    .field
      = f.label :password
      - if @validatable
        em
          | (
          = @minimum_password_length
          |  characters minimum)
      br
      = f.password_field :password, autocomplete: "off"
    .field
      = f.label :password_confirmation
      br
      = f.password_field :password_confirmation, autocomplete: "off"
    .actions
      = f.submit "Sign up"
= render "devise/shared/links"
